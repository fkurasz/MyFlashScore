<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KlubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nazwaklubu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="Manchester City"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/nazwaligi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premier League"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>
        <ImageButton
            android:id="@+id/ulubBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:tint="#FFD700"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MECZE ROZEGRANE "
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/meczerozegrane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38"
            android:padding="10dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BILANS BRAMKOWY "
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/bilansbramkowy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="83:32"
            android:padding="10dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUNKTY "
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/punktyzdobyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="86"
            android:padding="10dp"
            android:textColor="#000000"/>

    </LinearLayout>

</RelativeLayout>